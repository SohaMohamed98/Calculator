<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_view1" />

        <EditText
            android:id="@+id/num1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter num1"
            android:text="@string/edit_text1"
            tools:ignore="InvalidId" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="@string/text_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/num2"
            android:text="@string/edit_text2"
            android:hint="enter num2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="DuplicateIds" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_view"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="18dp"
        android:text="@string/text_view3"
        android:textAlignment="center"
        android:textSize="22dp" />
    <Button
        android:id="@+id/res"
        android:text="@string/btnOne"
        android:layout_gravity="center"
        android:layout_margin="18dp"
        android:layout_width="80dp"
        android:layout_height="40dp"
        tools:ignore="InvalidId" />


</LinearLayout>